// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String         @unique
  password      String
  groups        Groups[]
  purchase_list PurchaseList[]
  createdAt     DateTime       @default(now())
}

model Groups {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  createdAt     DateTime       @default(now())
  purchase_list PurchaseList[]
  User          User?          @relation(fields: [userId], references: [id])
  userId        String?        @db.ObjectId
}

model PurchaseList {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  products  Products[]
  color     String
  icon      String
  concluded Boolean
  Total     Float
  createdAt DateTime   @default(now())
  users     User?      @relation(fields: [userId], references: [id])
  userId    String?    @db.ObjectId
  Groups    Groups?    @relation(fields: [groupsId], references: [id])
  groupsId  String?    @db.ObjectId
}

model Products {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  quantity       Int
  category       String
  price          Float
  place_purchase String
  createdAt      DateTime      @default(now())
  PurchaseList   PurchaseList? @relation(fields: [purchaseListId], references: [id])
  purchaseListId String?       @db.ObjectId
}
